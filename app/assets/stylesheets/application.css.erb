body {
    background: #ffffff;
}

body.red_bg {
    background: #A31707;
}

::-webkit-input-placeholder {
    color: #CCCCCC;
}

:-moz-placeholder {
    color: #cccccc;
}

.left {
    float: left;
    text-align: left;
}

.right {
    float: right;
    text-align: right;
}

input:focus {
    outline: none;
}

input ::-webkit-input-placeholder {
    color: #000000;
}

input :-moz-placeholder {
    color: #000000;
}

.button {
    cursor: pointer;
}

.loader {
    width: 128px;
    height: 15px;
    background: transparent url(<%= asset_path 'ajax-loader.gif' %>) no-repeat 0 0;
}

/*Include Web Fonts as Contingencies */
@font-face {
    font-family: 'LucidaSansRegular';
    src: url('<%= asset_path 'lsansef.eot' %>');
    src: url('<%= asset_path 'lsansef.eot' %>?#iefix') format('embedded-opentype'),
    url('<%= asset_path 'lsansef.woff' %>') format('woff'),
    url('<%= asset_path 'lsansef.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: normal;

}

h1, h2, h3, h4, p, button, form, input {
    font-family: "LucidaSansRegular", sans-serif;
    margin: 0;
    padding: 0;
}


