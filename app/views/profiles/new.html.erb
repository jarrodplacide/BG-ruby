<% provide(:pagetitle, 'Complete your Registration') %>
<% provide(:body_class, 'red_bg') %>
<div id="single_column">

  <%= render 'shared/single_column_header' %>

  <div id="main" role="main">
    <div id="content">
      <div id="left-side" class="left">
        <div id="logo">
          <%= image_tag('logo-home.png', alt: 'BuzzyGals Logo') %>
        </div>
      </div>

      <div id="right-side" class="right">
        <p class="notice">Fill in your profile information & complete your registration.</p>
        <div id="login_option">
          <% flash.each do |key, value| %>
              <p class="login_error"><%= value %></p>
          <% end %>
          <%= form_for(@profile) do |f| %>
              <div>
                <%= f.text_field :firstname, :placeholder => "First Name" %>
              </div>

              <div>
                <%= f.text_field :lastname, :placeholder => "Last Name" %>
              </div>

              <div>
                <%= f.text_field :displayname, :placeholder => "Display Name" %>
              </div>

              <div>
                <%= f.label :gender, "Gender" %>
                <%= f.select :gender, options_for_select([ ['Male', 'male'], ['Female', 'female'] ], 'male') %>
              </div>

              <div>
                <%= f.label :dob, "Date of Birth" %>
                <%= f.date_select :dob %>
              </div>

              <div>
                <%= f.text_area :about, {:value => "About"} %>
              </div>

              <div><%= f.submit "Complete Registration" %></div>
          <% end %>
        </div>
      </div>

      <div class="clearfix"></div>
    </div>
  </div>

  <%= render 'shared/single_column_footer' %>

</div>
