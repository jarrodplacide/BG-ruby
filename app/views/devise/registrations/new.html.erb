<% provide(:pagetitle, 'Create An Account') %>
<% provide(:body_class, 'red_bg') %>
<div id="single_column">

  <%= render 'shared/single_column_header' %>

  <div id="main" role="main">
    <div id="content">
      <div id="left-side" class="left">
        <div id="logo">
          <%= image_tag('logo-home.png', alt: 'BuzzyGals Logo') %>
        </div>
      </div>

      <div id="right-side" class="right">

        <div id="login_option">

          <% if devise_error_messages? %>
              <%= devise_error_messages! %>
          <% end %>

          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

              <div>
                <%= f.email_field :email, :autofocus => true, :placeholder => "Enter Valid E-Mail Address" %></div>

              <div>
                <%= f.password_field :password, :placeholder => "Enter Password" %></div>

              <div>
                <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %></div>

              <div><%= f.submit "Sign up" %></div>

          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>

      <div class="clearfix"></div>
    </div>
  </div>

  <%= render 'shared/single_column_footer' %>

</div>
